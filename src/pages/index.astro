---
import "../styles/global.css";
import Baselayout from "../layouts/BaseLayout.astro"
---
<style>
  a{
    padding: 1rem;
  }
  .Menu:hover{
    text-decoration: underline;
  }
</style>

<Baselayout title="Kenay Dev">
  <header>
    
    
    <div class="grid grid-cols-2 items-center gap-1 mb-12">
      <div>
        <a href="#Home" class="text-4xl font-bold tracking-wide">キーナイ Dev</a>
      </div>
      <div class="text-right">
        <a href="#Home"     class="Menu">Home</a>
        <a href="#Skills"   class="Menu">Skills</a>
        <a href="#projects" class="Menu">Projects</a>
        <a href="#Stats"    class="Menu">Stats</a>
        <a href="#Contact"  class="Menu">Contact</a>
        <a href="#Message"  class="Menu">Message</a>
      </div>
    </div>
  </header>

  <body>
      
    <section id="Home" >
      <div class="items-center justify-center flex flex-col mb-6">
        <h1 class="text-6xl font-bold">KENAY PEREZ</h1>
        <h2 class="opacity-80">Frontend Developer</h2>
        
      </div>
      
      <div class="w-3/5 items-center flex gap-6 mx-auto text-balance">
        <div class="w-3/5 text-left text-lg font-light">
          <p>I'm a Frontend Developer from Mexico, passionate about creating beautiful and functional web experiences. I enjoy turning ideas into interactive and responsive designs. I'm always learning new technologies and improving my skills to build better and smarter digital products.</p>
        </div>
        
        <div>
          <img src="../assets/imgs/avatar.png" alt="profile photo" class="w-40 h-40 rounded"> 
        </div>
      </div>
  
      
    </section>
    
    <section id="Skills"></section>
    <section id="Projects"></section>
    <section id="Stats"></section>
    <section id="Contact"></section>
    <section id="Message"></section>

  </body>
</Baselayout> 
