---
import "../styles/global.css";
import Baselayout from "../layouts/BaseLayout.astro"
---
<head>
  
  <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
          
</head>
<style>
  a{
    padding: 1rem;
  }
  .Menu:hover{
    text-decoration: underline;
  }
</style>

<Baselayout title="Kenay Dev">
  <header>
    
    
    <div class="grid grid-cols-2 items-center gap-1 mb-12">
      <div>
        <a href="#Home" class="text-4xl font-bold tracking-wide">キーナイ Dev</a>
      </div>
      <div class="text-right">
        <a href="#Home"     class="Menu">Home</a>
        <a href="#Skills"   class="Menu">Skills</a>
        <a href="#projects" class="Menu">Projects</a>
        <a href="#Stats"    class="Menu">Stats</a>
        <a href="#Contact"  class="Menu">Contact</a>
        <a href="#Message"  class="Menu">Message</a>
      </div>
    </div>
  </header>

  <body>
      
    <section id="Home" >
      <div class="items-center justify-center flex flex-col mb-6">
        <h1 class="text-6xl font-bold">KENAY PEREZ</h1>
        <h2 class="opacity-80">Frontend Developer</h2>
        
      </div>
      
      <div class="w-screen flex items-center justify-center gap-6">
          <p class="prose prose-xl dark:prose-invert">I'm a Frontend Developer from Mexico, passionate about creating beautiful and functional web experiences. I enjoy turning ideas into interactive and responsive designs. I'm always learning new technologies and improving my skills to build better and smarter digital products.</p>
          <img src="../assets/imgs/avatar.png" alt="profile photo" class="w-40 h-40 rounded"> 
      </div>
        
      <div class="items-center text-2xl justify-end flex pr-80">
        <a href="https://github.com/https://github.com/K3N4Y"        class="hover:scale-110"><i class="devicon-github-original"></i></a>
        <a href="https://www.linkedin.com/in/kenay-perez-6a541127b/" class="hover:scale-110"><i class="devicon-linkedin-plain"></i></a>
        <a href="https://x.com/Mireytilin69"                         class="hover:scale-110"><i class="devicon-twitter-original"></i></a>
      </div>  
      
    </section>
    
    <section id="Skills">
      <h1 class="color-white text-4xl font-bold flex items-center justify-center">Skills</h1>
      <div class="flex items-center justify-center p-5 gap-5 text-6xl">
      
        <i class="devicon-astro-plain"></i>
        <i class="devicon-tailwindcss-original"></i>
        <i class="devicon-nodejs-plain-wordmark"></i>
        <i class="devicon-javascript-plain"></i>
        <i class="devicon-html5-plain-wordmark"></i>
        <i class="devicon-css3-plain-wordmark"></i>
          
      </div>
    </section>
    
    <section id="Projects">
      
      <div class="p-5">
        <h1 class="color-white text-4xl font-bold flex items-center justify-center">Projects</h1>
      </div>
    
    </section>
    <section id="Stats"></section>
    <section id="Contact"></section>
    <section id="Message"></section>

  </body>
</Baselayout> 
